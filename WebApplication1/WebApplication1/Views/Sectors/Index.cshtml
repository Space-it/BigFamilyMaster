@model IEnumerable<BigFamilyWeb.Sector>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Управление секторами</h2>

<p>
    @Html.ActionLink("Создать сектор", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageMobileURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecorationURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinKeywords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LampColor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contacts)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinImageUrl)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ImageMobileURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecorationURL)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.MinTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinKeywords)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LampColor)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.SectorId }) |
            @Html.ActionLink("Детельнее", "Details", new { id=item.SectorId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.SectorId })
        </td>
    </tr>
}

</table>
